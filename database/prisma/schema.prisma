// schema.prisma
generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Define the schema for your characters model
model Character {
  id        Int      @id @default(autoincrement()) 
  id_characters  String    @unique // Unique identifier for characters
  name_characters String    // Name of the characters
}
